# Telegram Client
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Phone number MUST start with + and country code (e.g., +62 for Indonesia)
# Format: +[country_code][number_without_leading_0]
# Example for Indonesia 0812-3456-7890: +62812345678900
# NO SPACES, NO DASHES - just +countrycode and digits
TELEGRAM_PHONE=+62xxxxxxxxxxxxx

# Gemini AI Configuration
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Selection
# Options: gemini-2.0-flash-exp (fastest, latest), gemini-1.5-flash, gemini-1.5-pro, gemini-pro
GEMINI_MODEL=gemini-2.0-flash-exp

# TMDB Configuration
# Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Website Configuration
WEBSITE_URL=https://noobz.space

# Bot Configuration
BOT_NAME=Noobz Announcement Bot
DEBUG=False
