# Telegram Client
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+62xxxxxxxxxxxxx

TELEGRAM_API_ID_2=your_api_id_here
TELEGRAM_API_HASH_2=your_api_hash_here
TELEGRAM_PHONE_2=+62xxxxxxxxxxxxx

# Gemini AI Configuration
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model Selection
# Options: gemini-2.0-flash-exp (fastest, latest), gemini-1.5-flash, gemini-1.5-pro, gemini-pro
GEMINI_MODEL=gemini-2.0-flash-exp

# TMDB Configuration
# Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Website Configuration
WEBSITE_URL=https://noobz.space

# Bot Configuration
BOT_NAME=Noobz Announcement Bot
DEBUG=False

# Noobz API Configuration (for bot upload feature)
NOOBZ_API_URL=https://noobz.space
NOOBZ_BOT_TOKEN=your_bot_token_here_must_match_laravel_env

# API Request Configuration
API_REQUEST_TIMEOUT=30
API_MAX_RETRIES=3
API_RETRY_DELAY=5

# Upload Authorization (comma-separated Telegram user IDs)
TELEGRAM_UPLOAD_WHITELIST=123456789,987654321
TELEGRAM_ADMIN_IDS=123456789
